{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}

<div class="p-6">

    <h1 class="text-3xl font-bold text-gray-800 mb-6">User Management</h1>

    <div class="bg-white shadow-lg rounded-xl overflow-hidden">

        <table class="min-w-full text-left text-sm text-gray-700">
            <thead class="bg-blue-600 text-white text-sm uppercase tracking-wider">
                <tr>
                    <th class="px-6 py-3">ID</th>
                    <th class="px-6 py-3">Username</th>
                    <th class="px-6 py-3">Roles</th>
                    <th class="px-6 py-3">Actions</th>
                </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr class="border-b hover:bg-gray-50">
                    <td class="px-6 py-4">{{ user.id }}</td>
                    <td class="px-6 py-4 font-medium">{{ user.username }}</td>
                    <td class="px-6 py-4">
                        <span class="bg-blue-100 text-blue-700 px-2 py-1 rounded text-xs">
                            {{ user.roles ? user.roles|json_encode : '' }}
                        </span>
                    </td>
                    <td class="px-6 py-4 flex gap-3">

                        <a href="{{ path('app_user_show', {'id': user.id}) }}"
                           class="text-blue-600 hover:text-blue-800 font-semibold">
                            View
                        </a>

                        <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                           class="text-yellow-600 hover:text-yellow-800 font-semibold">
                            Edit
                        </a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="px-6 py-4 text-center text-gray-500">
                        No users found.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6">
        <a href="{{ path('app_user_new') }}"
           class="inline-block px-5 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
            + Create New User
        </a>
    </div>

</div>

{% endblock %}
