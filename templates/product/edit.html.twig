{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto mt-12 p-8 bg-white rounded-2xl shadow-md">

    <!-- Page Header -->
    <h1 class="text-2xl font-bold text-blue-700 mb-6 flex items-center gap-2">
        <i data-feather="edit" class="w-5 h-5"></i>
        Edit Product
    </h1>

    <!-- Product Form -->
    <div class="space-y-4">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium w-full transition">
                {{ button_label|default('Update') }}
            </button>
        {{ form_end(form) }}
    </div>

    <!-- Action Buttons -->
    <div class="mt-6 flex flex-wrap gap-4">
        <a href="{{ path('app_product_index') }}"
           class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-lg transition font-medium">
            ‚Üê Back to Products
        </a>
        <div>
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>

</div>

<script>
    feather.replace();
</script>
{% endblock %}
