{% extends 'base.html.twig' %}

{% block title %}AquaFlow ‚Äî Product Details{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto mt-12">

  <!-- Page Header -->
  <div class="mb-8 text-center">
    <h1 class="text-3xl font-bold text-blue-700 flex justify-center items-center gap-2">
      üíß AquaFlow ‚Äî <span class="text-gray-700">Product Details</span>
    </h1>
  </div>

  <!-- Product Card -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 transition hover:shadow-md duration-200">

    <div class="grid grid-cols-1 gap-4 text-gray-700 text-sm sm:text-base">

      <div class="flex justify-between">
        <span class="font-semibold text-blue-700">ID</span>
        <span>{{ product.id }}</span>
      </div>

      <div class="flex justify-between">
        <span class="font-semibold text-blue-700">Product Name</span>
        <span>{{ product.ProductName }}</span>
      </div>

      <div class="flex justify-between">
        <span class="font-semibold text-blue-700">Type</span>
        <span>{{ product.Type }}</span>
      </div>

      <div class="flex justify-between">
        <span class="font-semibold text-blue-700">Price</span>
        <span>‚Ç±{{ product.Price|number_format(2, '.', ',') }}</span>
      </div>

      <div class="flex justify-between">
        <span class="font-semibold text-blue-700">Unit</span>
        <span>{{ product.Unit }}</span>
      </div>

      <div class="flex justify-between">
        <span class="font-semibold text-blue-700">Stock</span>
        <span>{{ product.stock }}</span>
      </div>

    </div>

    <!-- Buttons -->
    <div class="mt-6 flex flex-wrap gap-3">
      <a href="{{ path('app_product_index') }}" class="px-4 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition">
        ‚Üê Back to List
      </a>
      <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="px-4 py-2 bg-yellow-100 text-yellow-700 rounded-lg hover:bg-yellow-200 transition">
        Edit
      </a>
      {{ include('product/_delete_form.html.twig') }}
    </div>

  </div>
</div>

<script>
  feather.replace();
</script>
{% endblock %}
