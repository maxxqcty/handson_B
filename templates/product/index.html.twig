{% extends 'base.html.twig' %}

{% block title %}AquaFlow â€” Products{% endblock %}

{% block body %}

<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white py-12 px-6">

    <!-- HEADER -->
    <div class="max-w-7xl mx-auto mb-10 flex items-center justify-between">
        <h1 class="text-4xl font-extrabold text-blue-700 tracking-tight flex items-center gap-2">
            <span class="opacity-80">ðŸ’§</span> Products
        </h1>

        <a href="{{ path('app_product_new') }}"
           class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-xl shadow-lg shadow-blue-200
                  transition-all duration-200 font-medium">
            âž• Add New Product
        </a>
    </div>

    {% if products is empty %}
        <!-- EMPTY STATE -->
        <div class="max-w-4xl mx-auto text-center mt-20">
            <div class="bg-white/70 backdrop-blur-xl rounded-2xl shadow-lg p-12 border border-blue-100">
                <div class="text-6xl mb-4 opacity-60">ðŸ“¦</div>
                <p class="text-xl text-gray-600">No products found.</p>
                <p class="text-gray-500 mt-2">Start by creating your first product!</p>
            </div>
        </div>

    {% else %}
        <!-- PRODUCT GRID -->
        <div class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

            {% for product in products %}
                <div class="bg-white/70 backdrop-blur-lg border border-gray-100 rounded-2xl shadow-md 
                            hover:shadow-xl hover:-translate-y-1 transition transform duration-200 p-6">

                    <!-- Product Title -->
                    <h2 class="text-xl font-semibold text-blue-800">{{ product.productname }}</h2>

                    <!-- Price -->
                    <div class="mt-3 flex items-center gap-2 text-gray-700">
                        <i data-feather="tag" class="w-5 h-5 text-blue-600"></i>
                        <span class="text-lg font-medium">â‚±{{ product.price|number_format(2, '.', ',') }}</span>
                    </div>

                    <!-- Actions -->
                    <div class="mt-6 flex flex-wrap gap-2">

                        <a href="{{ path('app_product_show', { id: product.id }) }}"
                           class="flex items-center gap-1 px-3 py-2 bg-blue-50 text-blue-700 rounded-lg 
                                  hover:bg-blue-100 transition font-medium">
                            <i data-feather="eye" class="w-4 h-4"></i> View
                        </a>

                        <a href="{{ path('app_product_edit', { id: product.id }) }}"
                           class="flex items-center gap-1 px-3 py-2 bg-yellow-50 text-yellow-700 rounded-lg 
                                  hover:bg-yellow-100 transition font-medium">
                            <i data-feather="edit" class="w-4 h-4"></i> Edit
                        </a>

                        {{ include('product/_delete_form.html.twig', { product: product }) }}
                    </div>

                </div>
            {% endfor %}
        </div>
    {% endif %}

</div>

<script>
    feather.replace();
</script>

{% endblock %}
