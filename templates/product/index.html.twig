            <a href="{{ path('app_product_show', {'id': product.id}) }}"
               class="flex items-center gap-1 px-3 py-1.5 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition">
              <i data-feather="eye" class="w-4 h-4"></i>
              View
            </a>

            <a href="{{ path('app_product_edit', {'id': product.id}) }}"
               class="flex items-center gap-1 px-3 py-1.5 bg-yellow-100 text-yellow-700 rounded-lg hover:bg-yellow-200 transition">
              <i data-feather="edit" class="w-4 h-4"></i>
              Edit
            </a>

            {{ include('product/_delete_form.html.twig', { 'product': product }) }}
          </div>

        </div>
      {% endfor %}

    </div>

  {% endif %}
</div>

