{% extends 'base.html.twig' %}

{% block title %}Deceased Records{% endblock %}

{% block body %}
    <div class="space-y-8">
        <header class="flex justify-between items-center">
            <h1 class="text-3xl font-bold text-secondary">üóÇÔ∏è Deceased Records Index</h1>
            <a href="{{ path('app_deceased_new') }}"
               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-primary hover:bg-primary-dark transition duration-150 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                <span data-feather="plus" class="w-4 h-4 mr-2"></span> Create New Record
            </a>
        </header>

        <div class="bg-surface-white p-6 rounded-xl shadow-subtle">

            <div class="mb-6 flex space-x-3">

                <div class="relative">
                    <select id="searchFilter" class="appearance-none block w-full p-3 border border-divider rounded-lg bg-background-light/50 text-secondary focus:ring-primary focus:border-primary transition duration-150 pr-8">
                        <option value="all">Search All Columns</option>
                        <option value="1">First Name</option>
                        <option value="2">Last Name</option>
                        <option value="6">Cause of Death</option>
                        <option value="7">Notes</option>
                    </select>
                    <span class="absolute right-3 top-3.5 pointer-events-none text-secondary">
                        <span data-feather="chevron-down" class="w-4 h-4"></span>
                    </span>
                </div>

                <div class="relative flex-1">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-text-muted">
                        <span data-feather="search" class="w-5 h-5"></span>
                    </span>
                    <input type="text" id="searchInput" placeholder="Enter search term..."
                           class="w-full p-3 pl-10 border border-divider rounded-lg focus:ring-primary focus:border-primary transition duration-150 text-secondary placeholder-text-muted">
                </div>
            </div>

            <div class="overflow-x-auto">
                <table id="deceasedTable" class="min-w-full divide-y divide-divider">
                    <thead class="bg-background-light">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">First Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Last Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Born</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Died</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Gender</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Cause of Death</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-surface-white divide-y divide-divider" id="tableBody">
                    {% for deceased in deceaseds %}
                        <tr class="hover:bg-background-light/50 transition duration-100">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-text-muted">{{ deceased.id }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-secondary">{{ deceased.firstName }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-secondary">{{ deceased.lastName }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary/80">{{ deceased.dateOfBirth ? deceased.dateOfBirth|date('M d, Y') : 'N/A' }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary/80">{{ deceased.dateOfDeath ? deceased.dateOfDeath|date('M d, Y') : 'N/A' }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary/80">{{ deceased.gender }}</td>
                            <td class="px-6 py-4 text-sm text-secondary/80 max-w-xs truncate" title="{{ deceased.causeOfDeath }}">{{ deceased.causeOfDeath }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                <a href="{{ path('app_deceased_show', {'id': deceased.id}) }}"
                                   class="text-primary hover:text-primary-dark transition duration-150">
                                    Show
                                </a>
                                <a href="{{ path('app_deceased_edit', {'id': deceased.id}) }}"
                                   class="text-secondary hover:text-primary-dark transition duration-150">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="px-6 py-4 text-center text-text-muted">No records found. Click "Create New Record" to add one.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div id="noResults" class="hidden px-6 py-4 text-center text-text-muted border-t border-divider mt-4">
                No matching records found.
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // NOTE: The base.html.twig must have the updated sharper color definitions for these to work.
        // I will include the updated color configuration here again for completeness,
        // assuming you will update your base.html.twig with these values.

        // Tailwind Config Update (Assuming it's in base.html.twig)
        /*
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#C45A39', // Sharper Terracotta
                        'primary-dark': '#A64B31',
                        'secondary': '#3A2E2A', // Rich Dark Brown
                        'sidebar-bg': '#2D2321', // Near-Black Coffee
                        'sidebar-text': '#F5E6DA',
                        'sidebar-hover': '#4A342C',
                        'sidebar-active': '#C45A39',
                        'background-light': '#F5EFE9', // Slightly darker warm background
                        'surface-white': '#FFFFFF',
                        'divider': '#6B5751',
                        'text-muted': '#A3948C',
                    },
                    // ... other configs
                }
            }
        }
        */

        document.addEventListener('DOMContentLoaded', setupSearch);

        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            const searchFilter = document.getElementById('searchFilter');
            const tableBody = document.getElementById('tableBody');
            const noResultsRow = document.getElementById('noResults');
            const rows = tableBody.getElementsByTagName('tr');

            // Attach the same function to both input change and dropdown change
            searchInput.addEventListener('keyup', filterTable);
            searchFilter.addEventListener('change', filterTable);

            function filterTable() {
                const filterText = searchInput.value.toLowerCase().trim();
                const columnIndex = searchFilter.value;
                let foundResults = 0;

                for (let i = 0; i < rows.length; i++) {
                    let row = rows[i];
                    let match = false;

                    // If "no records found" from Twig initial state, skip
                    if (row.getElementsByTagName('td').length < 8) {
                        continue;
                    }

                    const cells = row.getElementsByTagName('td');

                    if (columnIndex === 'all') {
                        // Search all columns
                        const rowText = row.textContent || row.innerText;
                        if (rowText.toLowerCase().includes(filterText)) {
                            match = true;
                        }
                    } else if (cells[columnIndex]) {
                        // Search specific column index (0-based)
                        const cellText = cells[columnIndex].textContent || cells[columnIndex].innerText;
                        if (cellText.toLowerCase().includes(filterText)) {
                            match = true;
                        }
                    }

                    if (match) {
                        row.style.display = ""; // Show the row
                        foundResults++;
                    } else {
                        row.style.display = "none"; // Hide the row
                    }
                }

                // Show/hide the "No matching records" message
                if (foundResults === 0 && filterText.length > 0) {
                    noResultsRow.classList.remove('hidden');
                } else {
                    noResultsRow.classList.add('hidden');
                }
            }

            // Initial call to hide the default "no records found" if data exists
            if (rows.length > 0 && rows[0].getElementsByTagName('td').length >= 8) {
                // Check if the first row is a real data row
                noResultsRow.classList.add('hidden');
            }
        }
    </script>
{% endblock %}
