<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}AquaFlow{% endblock %}</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Icons -->
  <script src="https://unpkg.com/feather-icons"></script>

  {% block stylesheets %}{% endblock %}
</head>

<body class="bg-gray-100 text-gray-800 font-sans">
<div class="min-h-screen flex">

   <!-- Sidebar -->
  <aside class="w-64 bg-white border-r hidden md:block">
    <div class="p-6">
      <h1 class="text-2xl font-bold text-blue-600">ðŸ’§ AquaFlow</h1>
      <p class="text-sm text-gray-500 mt-1">Water Refilling Dashboard</p>
    </div>

    <nav class="px-4 py-2">
      <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-gray-100"
         href="{{ path('app_dashboard') }}">
        <span data-feather="home" class="w-4 h-4"></span> Dashboard
      </a>

      <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-gray-100"
         href="{{ path('app_order_index') }}">
        <span data-feather="file-text" class="w-4 h-4"></span> Orders
      </a>

      <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-gray-100"
         href="{{ path('app_product_index') }}">
        <span data-feather="package" class="w-4 h-4"></span> Products
      </a>

      <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-gray-100"
         href="{{ path('app_activity_logs') }}">
        <span data-feather="activity" class="w-4 h-4"></span> Activity Logs
      </a>

    <div class="mt-auto p-6 text-xs text-gray-500">
      v1.0 â€” AquaFlow
    </div>
  </aside>

  <!-- MAIN CONTENT -->
  <main class="flex-1 p-6">

    <!-- TOPBAR -->
    <header class="flex items-center justify-between mb-6">
      <button id="menuToggle" class="md:hidden p-2 bg-white rounded shadow">
        <span data-feather="menu" class="w-5 h-5"></span>
      </button>

       
    </header>

    <!-- MAIN PAGE CONTENT -->
    {% block body %}{% endblock %}

    <!-- FOOTER -->
    <footer class="mt-6 text-xs text-gray-500 text-center">
      Â© {{ "now"|date("Y") }} AquaFlow â€” Water Refilling Service
    </footer>

  </main>
</div>

<script>
  feather.replace();

  const menuToggle = document.getElementById("menuToggle");
  const aside = document.querySelector("aside");
  if (menuToggle) {
    menuToggle.addEventListener("click", () => {
      aside.classList.toggle("hidden");
    });
  }
</script>

{% block javascripts %}{% endblock %}
</body>
</html>
