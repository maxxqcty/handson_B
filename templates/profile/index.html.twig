{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-b from-blue-50 to-blue-100 py-12 px-6 flex justify-center">

    <div class="bg-white shadow-2xl rounded-2xl p-10 w-full max-w-2xl relative overflow-hidden">

        <!-- Decorative Floating Elements -->
        <div class="absolute -top-10 -right-10 w-32 h-32 bg-blue-400 opacity-20 rounded-full"></div>
        <div class="absolute -bottom-14 -left-14 w-40 h-40 bg-blue-600 opacity-10 rounded-full"></div>

        <!-- Header -->
        <div class="relative z-10 mb-8 text-center">
            <h1 class="text-4xl font-extrabold text-blue-800">My Profile</h1>
            <p class="text-gray-500 mt-2">View and manage your account details</p>
        </div>

        <!-- Profile Card -->
        <div class="relative z-10 bg-blue-50 border border-blue-200 p-8 rounded-2xl shadow-inner">

            <div class="flex items-center space-x-4 mb-6">
                <div class="w-16 h-16 bg-blue-200 rounded-full flex items-center justify-center shadow-lg">
                    <img src="https://img.icons8.com/ios-filled/50/user.png" class="opacity-80" />
                </div>
                <div>
                    <h2 class="text-2xl font-semibold text-blue-700">{{ user.username }}</h2>
                    <p class="text-gray-500 text-sm">AquaFlow User</p>
                </div>
            </div>

            <div class="border-t border-blue-300 my-6"></div>

            <div class="grid grid-cols-1 gap-4">
                <p class="text-lg">
                    <strong class="text-blue-700">Username:</strong>
                    <span class="text-gray-800 ml-1">{{ user.username }}</span>
                </p>

                <p class="text-lg">
                    <strong class="text-blue-700">Roles:</strong>
                    <span class="text-gray-800 ml-1">{{ user.roles|join(', ') }}</span>
                </p>
            </div>

            <div class="mt-8">
                <a href="{{ path('profile_change_password') }}"
                   class="inline-block px-6 py-3 bg-blue-600 text-white font-bold rounded-xl shadow-lg hover:bg-blue-700 hover:scale-[1.03] transition">
                    Change Password
                </a>
            </div>

        </div>

    </div>

</div>
{% endblock %}
