{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
{# Replaced blue gradients/backgrounds with warm background-light #}
<div class="min-h-screen bg-background-light py-12 px-4 md:px-6 flex justify-center">

    <div class="bg-surface-white shadow-2xl rounded-2xl p-6 md:p-10 w-full max-w-2xl relative overflow-hidden border border-divider/50">

        {# Replaced blue elements with primary and secondary theme colors #}
        <div class="absolute -top-10 -right-10 w-32 h-32 bg-primary opacity-20 rounded-full"></div>
        <div class="absolute -bottom-14 -left-14 w-40 h-40 bg-secondary opacity-10 rounded-full"></div>

        <div class="relative z-10 mb-8 text-center">
            <h1 class="text-4xl font-extrabold text-secondary">ðŸ‘¤ My Profile</h1>
            <p class="text-text-muted mt-2">View and manage your account details</p>
        </div>

        {# Replaced blue background/border with subtle background-light and divider #}
        <div class="relative z-10 bg-background-light border border-divider p-8 rounded-2xl shadow-inner">

            <div class="flex items-center space-x-4 mb-6">
                {# Profile Icon Themed #}
                <div class="w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center shadow-lg">
                    <span data-feather="user" class="w-8 h-8 text-primary"></span>
                </div>
                <div>
                    <h2 class="text-2xl font-semibold text-primary">{{ user.username }}</h2>
                    <p class="text-secondary text-sm">Cemetery Management User</p>
                </div>
            </div>

            <div class="border-t border-divider my-6"></div>

            <div class="grid grid-cols-1 gap-4">
                <p class="text-lg">
                    {# Key Value Styling #}
                    <strong class="text-secondary font-semibold">Username:</strong>
                    <span class="text-primary ml-2 font-medium">{{ user.username }}</span>
                </p>

                <p class="text-lg">
                    {# Key Value Styling #}
                    <strong class="text-secondary font-semibold">Roles:</strong>
                    <span class="ml-2">
                        {% for role in user.roles %}
                            <span class="inline-block px-3 py-0.5 text-xs font-semibold rounded-full
                                {% if role == 'ROLE_ADMIN' %}
                                    bg-primary text-white shadow-sm
                                {% else %}
                                    bg-secondary/10 text-secondary border border-divider/50
                                {% endif %}
                            ">
                                {{ role }}
                            </span>
                        {% endfor %}
                    </span>
                </p>
            </div>

            <div class="mt-8">
                <a href="{{ path('profile_change_password') }}"
                   class="inline-block px-6 py-3 bg-primary text-white font-bold rounded-xl shadow-lg
                   hover:bg-primary-dark hover:scale-[1.03] transition duration-200">
                    <span data-feather="lock" class="w-4 h-4 mr-2 inline-block"></span> Change Password
                </a>
            </div>

        </div>

    </div>

</div>
{% endblock %}
