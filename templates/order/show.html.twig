{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }}{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto mt-12 p-8 bg-white rounded-2xl shadow-md">

    <!-- Page Header -->
    <h1 class="text-2xl font-bold text-blue-700 mb-6 flex items-center gap-2">
        <i data-feather="file-text" class="w-5 h-5"></i>
        Order #{{ order.id }}
    </h1>

    <!-- Order Details Table -->
    <table class="w-full text-left border-collapse">
        <tbody class="divide-y divide-gray-200">
            <tr>
                <th class="px-4 py-2 text-gray-600 font-medium w-1/3">Customer Name</th>
                <td class="px-4 py-2 text-gray-800">{{ order.customerName }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-gray-600 font-medium">Product</th>
                <td class="px-4 py-2 text-gray-800">{{ order.product }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-gray-600 font-medium">Address</th>
                <td class="px-4 py-2 text-gray-800">{{ order.address }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-gray-600 font-medium">Total</th>
                <td class="px-4 py-2 text-gray-800">₱{{ order.total }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-gray-600 font-medium">Items</th>
                <td class="px-4 py-2 text-gray-800">{{ order.items }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Action Buttons -->
    <div class="mt-6 flex justify-between items-center">
        <div class="flex gap-3">
            <a href="{{ path('app_order_index') }}"
               class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-lg transition font-medium">
               ← Back to Orders
            </a>

            <a href="{{ path('app_order_edit', {'id': order.id}) }}"
               class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition font-medium">
               Edit Order
            </a>
        </div>

        {{ include('order/_delete_form.html.twig') }}
    </div>

</div>

<script>
    feather.replace();
</script>
{% endblock %}
