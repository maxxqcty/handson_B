{% extends 'base.html.twig' %}

{% block title %}AquaFlow ‚Äî Order Details{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(to bottom, #e0f7fa, #ffffff);
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        color: #02475e;
        margin: 0;
        padding: 30px;
    }

    .order-details-container {
        max-width: 700px;
        margin: 60px auto;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 6px 14px rgba(0, 0, 0, 0.1);
        padding: 40px 50px;
        animation: fadeIn 0.4s ease;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }

    h1 {
        text-align: center;
        color: #0277bd;
        text-shadow: 1px 1px 2px #b3e5fc;
        margin-bottom: 30px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

    th {
        text-align: left;
        padding: 12px;
        background-color: #e1f5fe;
        color: #01579b;
        font-weight: 600;
        width: 30%;
        border-radius: 6px 0 0 6px;
    }

    td {
        padding: 12px;
        background-color: #f9f9f9;
        border-radius: 0 6px 6px 0;
        color: #02475e;
    }

    tr + tr th, tr + tr td {
        border-top: 1px solid #b3e5fc;
    }

    .actions {
        display: flex;
        justify-content: space-between;
        margin-top: 25px;
    }

    .btn {
        display: inline-block;
        padding: 10px 18px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-back {
        background-color: #b3e5fc;
        color: #01579b;
    }

    .btn-back:hover {
        background-color: #81d4fa;
    }

    .btn-edit {
        background-color: #0288d1;
        color: #ffffff;
    }

    .btn-edit:hover {
        background-color: #0277bd;
    }

    .btn-delete {
        background-color: #ef5350;
        color: #ffffff;
        border: none;
        cursor: pointer;
        font-size: 15px;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .btn-delete:hover {
        background-color: #d32f2f;
    }

    .water-icon {
        font-size: 1.4em;
        margin-right: 6px;
    }
</style>

<div class="order-details-container">
    <h1><span class="water-icon">üíß</span> Order Details</h1>

    <table>
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Customer Name</th>
                <td>{{ order.CustomerName }}</td>
            </tr>
            <tr>
                <th>Items</th>
                <td>{{ order.Items }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.Address }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.Status }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>‚Ç±{{ order.Total }}</td>
            </tr>
        </tbody>
    </table>

   <div class="actions">
    <a href="{{ path('app_order_index') }}" class="btn btn-back">‚Üê Back to List</a>
   
</div>


{% endblock %}
