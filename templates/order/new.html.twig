{% extends 'base.html.twig' %}

{% block title %}AquaFlow ‚Äî New Order{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(to bottom, #e0f7fa, #ffffff);
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        color: #02475e;
        margin: 0;
        padding: 30px;
    }

    .new-order-container {
        max-width: 650px;
        margin: 50px auto;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 40px 50px;
        animation: fadeIn 0.4s ease;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }

    h1 {
        text-align: center;
        color: #0277bd;
        text-shadow: 1px 1px 2px #b3e5fc;
        margin-bottom: 25px;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    label {
        font-weight: 600;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"],
    select,
    textarea {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #b3e5fc;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }

    input:focus,
    select:focus,
    textarea:focus {
        outline: none;
        border-color: #0288d1;
        box-shadow: 0 0 4px rgba(2, 136, 209, 0.4);
    }

    .btn-submit {
        background-color: #0288d1;
        color: #ffffff;
        border: none;
        padding: 10px 15px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-submit:hover {
        background-color: #0277bd;
        transform: translateY(-2px);
    }

    .links {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .back-link {
        text-decoration: none;
        color: #0277bd;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: #01579b;
        text-decoration: underline;
    }

    .water-icon {
        font-size: 1.4em;
        margin-right: 6px;
    }
</style>

<div class="new-order-container">
    <h1><span class="water-icon">üíß</span> Create New Order</h1>

    {{ include('order/_form.html.twig', {'button_label': 'Save Order'}) }}

    <div class="links">
        <a href="{{ path('app_order_index') }}" class="back-link">‚Üê Back to Orders</a>
    </div>
</div>
{% endblock %}
