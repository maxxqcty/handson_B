{% extends 'base.html.twig' %}

{% block title %}Edit Order{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto mt-12 p-8 bg-white rounded-2xl shadow-md">

    <!-- Page Header -->
    <h1 class="text-2xl font-bold text-blue-700 mb-6 flex items-center gap-2">
        <i data-feather="edit" class="w-5 h-5"></i>
        Edit Order #{{ order.id }}
    </h1>

    <!-- Order Form -->
    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        {# Customer Name #}
        <div>
            <label for="{{ form.customerName.vars.id }}" class="block text-sm font-medium text-gray-600 mb-1">Customer Name</label>
            {{ form_widget(form.customerName, {
                attr: {
                    class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                }
            }) }}
            {{ form_errors(form.customerName) }}
        </div>

        {# Product #}
        <div>
            <label for="{{ form.product.vars.id }}" class="block text-sm font-medium text-gray-600 mb-1">Product</label>
            {{ form_widget(form.product, {
                attr: {
                    class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                }
            }) }}
            {{ form_errors(form.product) }}
        </div>

        {# Address #}
        <div>
            <label for="{{ form.address.vars.id }}" class="block text-sm font-medium text-gray-600 mb-1">Address</label>
            {{ form_widget(form.address, {
                attr: {
                    class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                }
            }) }}
            {{ form_errors(form.address) }}
        </div>

        {# Total #}
        <div>
            <label for="{{ form.total.vars.id }}" class="block text-sm font-medium text-gray-600 mb-1">Total</label>
            {{ form_widget(form.total, {
                attr: {
                    class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                }
            }) }}
            {{ form_errors(form.total) }}
        </div>

        {# Items #}
        <div>
            <label for="{{ form.items.vars.id }}" class="block text-sm font-medium text-gray-600 mb-1">Items</label>
            {{ form_widget(form.items, {
                attr: {
                    class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                }
            }) }}
            {{ form_errors(form.items) }}
        </div>

        {# Submit Button #}
        <div class="pt-4">
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                Update Order
            </button>
        </div>

    {{ form_end(form) }}

    <!-- Back and Delete -->
    <div class="mt-6 flex justify-between items-center">
        <a href="{{ path('app_order_index') }}" class="text-blue-600 hover:text-blue-800 font-medium transition">
            ‚Üê Back to Orders
        </a>

        {{ include('order/_delete_form.html.twig') }}
    </div>
</div>

<script>
    feather.replace();
</script>
{% endblock %}
